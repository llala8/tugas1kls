<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF80AB"
    android:longClickable="false"
    tools:context=".MainActivity2">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/_1" />

    <TextView
        android:id="@+id/la"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="118dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:padding="0dp"
        android:text="Follow"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/lai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView2"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/la"
        android:orientation="horizontal"
        android:padding="0dp"
        android:text="Post"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/laila"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView2"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/lai"
        android:orientation="horizontal"
        android:padding="0dp"
        android:text="following"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/la"
        android:layout_marginTop="30dp"
        android:background="#EA80FC"
        android:backgroundTint="#EA80FC"
        android:drawableTint="#B388FF"
        android:orientation="vertical"
        android:padding="20dp"
        android:text="Home Malang"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textCursorDrawable="@android:drawable/ic_dialog_map"
        android:textIsSelectable="false"
        android:textSize="18sp"
        android:typeface="normal" />

    <TextView
        android:id="@+id/mu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tul"
        android:layout_marginTop="20dp"
        android:background="#EA80FC"
        android:drawableTint="@color/purple_200"
        android:orientation="vertical"
        android:padding="20dp"
        android:text="NO.HP 081XXXXXXXXX"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textCursorDrawable="@android:drawable/stat_sys_phone_call"
        android:textIsSelectable="false"
        android:textSize="18sp"
        android:typeface="normal" />

    <TextView
        android:id="@+id/fii"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mu"
        android:layout_marginTop="20dp"
        android:background="#EA80FC"
        android:drawableTint="#EA80FC"
        android:orientation="vertical"
        android:padding="20dp"
        android:text="Email lalabisa@gmail.com"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textCursorDrawable="@android:drawable/ic_dialog_email"
        android:textIsSelectable="false"
        android:textSize="18sp"
        android:typeface="normal" />

    <TextView
        android:id="@+id/dah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fii"
        android:layout_marginTop="20dp"
        android:background="#EA80FC"
        android:drawableTint="#EA80FC"
        android:orientation="vertical"
        android:padding="20dp"
        android:text="Status Mahasiswa "
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textCursorDrawable="@android:drawable/ic_menu_send"
        android:textIsSelectable="false"
        android:textSize="18sp"
        android:typeface="normal" />

</RelativeLayout>